{
    "name": "node-server",
    "version": "1.2.0",
    "description": "Boiletplate for node rest server",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc --project ./ && tscpaths -p ./tsconfig.json -s ./src -o ./dist",
        "prebuild": "rm -rf dist",
        "start": "ts-node-dev --respawn --pretty --prefer-ts true -r tsconfig-paths/register --transpile-only src/app.ts",
        "utest": "jest --coverage",
        "utest:watch": "jest --coverage --watchAll",
        "test": "yarn lint:test && yarn utest",
        "lint:test": "eslint \"src/**/*.{ts,tsx}\" --quiet",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --quiet --fix"
    },
    "author": "Giric Goyal",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": ""
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.10",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.11",
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.14.35",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "axios": "^0.21.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "express": "^4.17.1",
        "lodash": "^4.17.21",
        "prettier": "^2.3.2",
        "ts-node-dev": "^1.1.6",
        "tsconfig-paths": "^3.9.0",
        "tscpaths": "^0.0.9",
        "tslint": "^6.1.3",
        "typescript": "^4.2.3",
        "typescript-transform-paths": "^3.0.2",
        "@types/jest": "^29.5.6",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testEnvironment": "jest-environment-jsdom",
        "testRegex": "(__tests__/.*|(\\.|/))(spec).(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageReporters": [
            "lcov"
        ],
        "coverageDirectory": "coverage",
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ],
        "moduleDirectories": [
            "node_modules",
            "<rootDir>"
        ],
        "moduleNameMapper": {
            "^.+\\.(css|less|scss)$": "identity-obj-proxy",
            "^react(.*)$": "<rootDir>/node_modules/react$1"
        }
    }
}
